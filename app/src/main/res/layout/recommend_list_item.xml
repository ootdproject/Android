<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    cardview:cardBackgroundColor="#00FFFFFF"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="5dp"
    cardview:cardPreventCornerOverlap="true"
    cardview:cardUseCompatPadding="true"
    cardview:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recmd_img"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:background="@drawable/recmd_img_1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recmd_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="당신을 위한 추천"
            android:textAlignment="center"
            android:textSize="24sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>